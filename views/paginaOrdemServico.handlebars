<body>
  <div class="bg-dark text-light min-vh-100 d-flex flex-column">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary mb-3">
      <div class="container">
        <a class="navbar-brand" href="/">Ordem de Serviço</a>
      </div>
    </nav>

    <div class="container flex-grow-1">
      {{!A div para enviar a mensagem de erro sobre o telefone  para a tela }}
      {{#if erro}}
        <div id="modalErro" class="modal">
          <div class="modal-content">
            <p>{{mensagem}}</p>
            <button id="btnFecharModal">OK</button>
          </div>
        </div>
      {{/if}}
      <!-- Form principal envolvendo todas as colunas -->
      <form id="formOrdemServicoCompleto" action="/ordemServico" method="POST">
        <div class="row g-4">

          <!-- Coluna 1: Dados do cliente -->
          <div class="col-md-4">
            <div class="card bg-secondary text-light h-100 p-3" style="max-width:400px;">
              <div class="mb-3">
                <label class="form-label">Nome</label>
                <input type="text" name="nomeNome" class="form-control" placeholder="Digite o nome do cliente" value="{{valores.nome}}">
              </div>
              <div class="mb-3">
                <label class="form-label">Telefone 1</label>
                <input type="text" name="nomeTelefoneUm" class="form-control" placeholder="(xx) xxxxx-xxxx" value="{{valores.telefoneUm}}">
              </div>
              <div class="mb-3">
                <label class="form-label">Telefone 2</label>
                <input type="text" name="nomeTelefoneDois" class="form-control" placeholder="(xx) xxxxx-xxxx" value="{{valores.telefoneDois}}">
              </div>
              <div class="mb-3">
                <label class="form-label">Equipamento Deixado</label>
                <input type="text" name="nomeEquipamento" class="form-control" placeholder="Ex: Notebook, Impressora..." value="{{valores.equipamento}}">
              </div>
            </div>
          </div>

          <!-- Coluna 2: Ordem de Serviço + Observações -->
          <div class="col-md-4">
            <div class="card bg-secondary text-light h-100 p-3" style="max-width:400px;">
              <div class="mb-3">
                <label class="form-label">Defeito Reclamado</label>
                <input type="text" name="nomeDefeito" class="form-control" placeholder="Descreva o problema relatado" value="{{valores.nome}}">
              </div>
              <div class="mb-3">
                <label class="form-label">Data de Entrada</label>
                <input type="date" name="nomeDataEntrada" class="form-control" value="{{valores.dataEntrada}}">
              </div>
              <div class="mb-3">
                <label class="form-label">Valor do Serviço (R$)</label>
                <input type="number" name="nomeValor" step="0.01" class="form-control" placeholder="0,00" value="{{valores.valor}}">
              </div>
              <div class="mb-3">
                <label class="form-label">Observações Detalhadas</label>
                <textarea name="nomeObservacoes" class="form-control" rows="3" placeholder="{{#if valores.observacao}}{{valores.observacao}}{{else}}Digite aqui as observações detalhadas...{{/if}}"></textarea>
              </div>

              <!-- Botão Submit -->
              <div class="mb-3">
                <button type="submit" class="btn btn-primary w-100">Salvar</button>
              </div>
            </div>
          </div>

          <!-- Coluna 3: Pesquisa e resultados -->
          <div class="col-md-4">
            <div class="card bg-secondary text-light h-100 p-3" style="max-width:400px;">
              <!-- Pesquisa de Cliente -->
              <div class="input-group mb-3">
                <input type="text" id="pesquisaCliente" name="nomePesquisaCliente" class="form-control" placeholder="Pesquisar cliente">
                <button type="submit" class="btn btn-primary" formaction="/ordemServico?search=true" formmethod="GET">Pesquisar</button>
              </div>

              <h5 class="text-info mb-3">Resultados da Pesquisa</h5>
              <div id="searchResults" class="flex-grow-1 overflow-auto" style="height: calc(100% - 110px);">
                <p>Nenhum resultado selecionado.</p>
              </div>

              <!-- Botões de ação -->
              <div class="d-flex justify-content-between mt-3">
                <button type="button" class="btn btn-danger">Deletar</button>
                <button type="button" class="btn btn-warning">Editar</button>
                <button type="button" class="btn btn-info">Imprimir</button>
              </div>

              <!-- Botão Voltar -->
              <div class="mt-3">
                <button type="button" class="btn btn-dark w-100" onclick="window.location.href='/'">Voltar à Página Inicial</button>
              </div>
            </div>
          </div>

        </div>
      </form>
    </div>
  </div>
  
<script>
document.addEventListener("DOMContentLoaded", () => {
  const modal = document.getElementById("modalErro");
  const btnFechar = document.getElementById("btnFecharModal");

  if (modal && btnFechar) {
    btnFechar.addEventListener("click", () => {
      modal.style.display = "none"; // esconde o modal
    });
  }
});
</script>

</body>

