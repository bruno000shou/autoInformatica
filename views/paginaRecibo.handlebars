
<body>
  <div class="bg-dark text-light min-vh-100 d-flex flex-column overflow-hidden">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary mb-4">
      <div class="container">
        <a class="navbar-brand" href="/">Recibos</a>
      </div>
    </nav>

    <div class="container flex-grow-3">
      <div class="row g-4">
        <!-- Coluna 1: Formulário de recibo -->
        <div class="col-md-3 h-50">
          <div class="card bg-secondary text-light h-100">
            <div class="card-body">
              <h5 class="card-title mb-3">Novo Recibo</h5>
              <form>
                <div class="mb-4">
                  <label class="form-label">Cliente</label>
                  <input type="text" class="form-control mt-3" mt-2 placeholder="Nome do cliente">
                </div>
                <div class="mb-4">
                  <label class="form-label">Serviço ou Venda</label>
                  <input type="text" class="form-control mt-3" placeholder="Ex: Manutenção, Produto...">
                </div>
                <div class="mb-5">
                  <label class="form-label">Valor</label>
                  <input type="number" step="0.01" class="form-control mt-3" placeholder="0,00">
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-5">Salvar</button>
              </form>
            </div>
          </div>
        </div>

        <!-- Coluna 2: Pesquisa e listagem de recibos -->
        <div class="col-md-9">
          <div class="card bg-secondary text-light h-75 mb-4 d-flex flex-column">
            <div class="card-body d-flex flex-column">
              <h3 class="card-title">Pesquisa de Recibos</h3>

              <!-- Campo de pesquisa -->
              <div class="input-group mb-2">
                <input type="text" class="form-control" placeholder="Pesquisar por nome ou data">
                <button class="btn btn-primary">Pesquisar</button>
              </div>

              <!-- Área onde aparecerão os recibos -->
              <div class="flex-grow-1" style="min-height: 320px;">
                <p>Aqui serão exibidos os recibos encontrados...</p>
              </div>

              <!-- Botões de ação -->
              <div class="d-flex gap-3">
                <button class="btn btn-warning w-50">Editar</button>
                <button class="btn btn-info w-50">Imprimir</button>
              </div>

              <!-- Botão de voltar -->
              <div class="mt-2">
                <button class="btn btn-secondary w-100" onclick="window.location.href='/'">
                  Voltar à Página Inicial
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
