<body>
  <div class="bg-dark text-light min-vh-100 d-flex flex-column">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary mb-4">
      <div class="container">
        <a class="navbar-brand" href="/">Agenda</a>
      </div>
    </nav>

    <div class="container flex-grow-1">
      <div class="row g-4" style="height: calc(100vh - 80px);">

        <!-- Coluna Esquerda: Calendário -->
        <div class="col-md-7 d-flex flex-column ">
          <div class="card bg-secondary text-light d-flex flex-column card-2">
            <div class="card-body d-flex flex-column">

              <!-- Navegação do Calendário -->
              <div class="d-flex justify-content-between align-items-center mb-3">
                <button class="btn btn-outline-light btn-sm" id="prevMonth">&laquo; Mês Anterior</button>
                <h4 id="calendarMonth" class="m-0">Março 2025</h4>
                <button class="btn btn-outline-light btn-sm" id="nextMonth">Próximo Mês &raquo;</button>
              </div>

              <!-- Grid dos 31 dias -->
              <div id="calendarGrid" class="d-grid flex-grow-1"
                   style="grid-template-columns: repeat(7, 1fr); gap: 6px; overflow-y: auto; max-height: 400px;">

                <!-- 31 quadrados -->
                <div class="day-card text-center p-2 shadow-sm rounded">1</div>
                <div class="day-card text-center p-2 shadow-sm rounded">2</div>
                <div class="day-card text-center p-2 shadow-sm rounded">3</div>
                <div class="day-card text-center p-2 shadow-sm rounded">4</div>
                <div class="day-card text-center p-2 shadow-sm rounded">5</div>
                <div class="day-card text-center p-2 shadow-sm rounded">6</div>
                <div class="day-card text-center p-2 shadow-sm rounded">7</div>
                <div class="day-card text-center p-2 shadow-sm rounded">8</div>
                <div class="day-card text-center p-2 shadow-sm rounded">9</div>
                <div class="day-card text-center p-2 shadow-sm rounded">10</div>
                <div class="day-card text-center p-2 shadow-sm rounded">11</div>
                <div class="day-card text-center p-2 shadow-sm rounded">12</div>
                <div class="day-card text-center p-2 shadow-sm rounded">13</div>
                <div class="day-card text-center p-2 shadow-sm rounded">14</div>
                <div class="day-card text-center p-2 shadow-sm rounded">15</div>
                <div class="day-card text-center p-2 shadow-sm rounded">16</div>
                <div class="day-card text-center p-2 shadow-sm rounded">17</div>
                <div class="day-card text-center p-2 shadow-sm rounded">18</div>
                <div class="day-card text-center p-2 shadow-sm rounded">19</div>
                <div class="day-card text-center p-2 shadow-sm rounded">20</div>
                <div class="day-card text-center p-2 shadow-sm rounded">21</div>
                <div class="day-card text-center p-2 shadow-sm rounded">22</div>
                <div class="day-card text-center p-2 shadow-sm rounded">23</div>
                <div class="day-card text-center p-2 shadow-sm rounded">24</div>
                <div class="day-card text-center p-2 shadow-sm rounded">25</div>
                <div class="day-card text-center p-2 shadow-sm rounded">26</div>
                <div class="day-card text-center p-2 shadow-sm rounded">27</div>
                <div class="day-card text-center p-2 shadow-sm rounded">28</div>
                <div class="day-card text-center p-2 shadow-sm rounded">29</div>
                <div class="day-card text-center p-2 shadow-sm rounded">30</div>
                <div class="day-card text-center p-2 shadow-sm rounded">31</div>

              </div>
            </div>
          </div>
        </div>

        <!-- Coluna Direita: Eventos -->
        <div class="col-md-5 d-flex flex-column">
          <div class="card bg-secondary text-light d-flex flex-column h-100 card-2">

            <!-- Formulário de Evento -->
            <div class="card-body">
              <h5 class="card-title mb-1">Adicionar Evento</h5>
              <form>
                <div class="mb-1">
                  <label class="form-label">Nome</label>
                  <input type="text" class="form-control" placeholder="Nome">
                </div>
                <div class="mb-1">
                  <label class="form-label">Evento</label>
                  <input type="text" class="form-control" placeholder="Descrição do evento">
                </div>
                <div class="mb-1">
                  <label class="form-label">Data Limite</label>
                  <input type="date" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-2">Salvar</button>
              </form>
            </div>

            <!-- Área de Detalhes do Dia -->
            <div class="card-body flex-grow-1 overflow-auto" style="min-height: 0; max-height: 300px;">
              <h5 class="card-title mb-1">Eventos do Dia</h5>
              <div id="eventDetails">
                <p>Selecione um dia no calendário para ver os eventos.</p>
              </div>
            </div>

            <!-- Botão Voltar -->
            <div class="card-body">
              <button class="btn btn-dark w-100" onclick="window.location.href='/'">Voltar à Página Inicial</button>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>

