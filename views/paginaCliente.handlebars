<body>
  <div class="bg-dark text-light min-vh-100 d-flex flex-column">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary mb-4">
      <div class="container">
        <a class="navbar-brand" href="/">Clientes</a>
      </div>
    </nav>

    <div class="container flex-grow-1">
      <div class="row g-4">

        <!-- Coluna Esquerda: Formulário de Cadastro -->
        <div class="col-md-4">
          <div class="card bg-secondary text-light h-100">
            <div class="card-body">
              <h5 class="card-title mb-3">Cadastrar Cliente</h5>

              <form>
                <div class="mb-3">
                  <label class="form-label">Nome</label>
                  <input type="text" class="form-control" placeholder="Nome do cliente">
                </div>

                <div class="mb-3">
                  <label class="form-label">Telefone 1</label>
                  <input type="tel" class="form-control" placeholder="(00) 00000-0000">
                </div>

                <div class="mb-3">
                  <label class="form-label">Telefone 2</label>
                  <input type="tel" class="form-control" placeholder="Opcional">
                </div>

                <div class="mb-3">
                  <label class="form-label">Observações</label>
                  <textarea class="form-control" rows="3" placeholder="Informações adicionais"></textarea>
                </div>

                <button type="submit" class="btn btn-primary w-100">Salvar</button>
              </form>

            </div>
          </div>
        </div>

        <!-- Coluna Direita: Pesquisa e Resultados -->
        <div class="col-md-8">
          <!-- Pesquisa -->
          <div class="card bg-secondary text-light mb-3">
            <div class="card-body">
              <h6 class="card-title mb-3">Pesquisar Cliente</h6>

              <div class="input-group">
                <input type="text" class="form-control" placeholder="Digite nome ou telefone">
                <button class="btn btn-primary">Pesquisar</button>
              </div>
            </div>
          </div>

          <!-- Resultados -->
          <div class="card bg-secondary text-light h-auto" style="min-height: 300px;">
            <div class="card-body">
              <h6 class="card-title mb-3">Resultados da Pesquisa</h6>

              <!-- Exemplo da lista de clientes (pode remover depois) -->
              <ul class="list-group list-group-flush">
                <li class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center">
                  <div>
                    <strong>Fulano de Tal</strong><br>
                    (11) 99999-1111 | (11) 98888-2222
                  </div>
                  <div>
                    <button class="btn btn-sm btn-warning me-2">Editar</button>
                    <button class="btn btn-sm btn-danger">Deletar</button>
                  </div>
                </li>
              </ul>

            </div>
          </div>

          <!-- Botão Voltar -->
          <div class="mt-3">
            <button class="btn btn-secondary w-100" onclick="window.location.href='/'">Voltar à Página Inicial</button>
          </div>
        </div>

      </div>
    </div>
  </div>
</body>